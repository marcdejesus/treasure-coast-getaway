# ================================
# TREASURE COAST GETAWAY - ENVIRONMENT VARIABLES
# ================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# ================================
# BASIC CONFIGURATION
# ================================

# Application URL (used for SEO metadata and canonical URLs)
NEXT_PUBLIC_SITE_URL=https://treasurecoastgetaway.com

# Environment (development, staging, production)
NODE_ENV=development

# ================================
# SEO & ANALYTICS
# ================================

# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Site Verification Code
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code

# ================================
# CONTACT & BOOKING
# ================================

# Property contact email
CONTACT_EMAIL=treasurecoastpropertyrentals@gmail.com

# Property phone number
CONTACT_PHONE=+15869041191

# Airbnb listing URL
AIRBNB_LISTING_URL=https://www.airbnb.com/rooms/953226587982597312

# ================================
# EMAIL SERVICES (Optional)
# ================================

# SendGrid for transactional emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ================================
# FORM HANDLING (Optional)
# ================================

# Formspree endpoint for contact forms
FORMSPREE_ENDPOINT=https://formspree.io/f/your-form-id

# ================================
# IMAGE OPTIMIZATION (Optional)
# ================================

# Cloudinary for image management
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ================================
# MONITORING & ERROR TRACKING (Optional)
# ================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# MAPS & LOCATION (Optional)
# ================================

# Google Maps API for location features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ================================
# SOCIAL MEDIA (Optional)
# ================================

# Instagram profile URL
INSTAGRAM_URL=https://www.instagram.com/treasurecoastgetaway/

# ================================
# NOTES
# ================================
# 1. Variables with NEXT_PUBLIC_ prefix are exposed to the browser
# 2. Always use strong, unique values for API keys and secrets
# 3. Set up proper security headers for production deployment
